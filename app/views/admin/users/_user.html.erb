<%# app/views/admin/users/_user.html.erb %>
<div class="user">
  <div class="user-info">
    <p>
      <strong>Email:</strong>
      <%= user.email %>
    </p>
    
    <p>
      <strong>Status:</strong>
      <span class="status <%= user.is_blocked ? 'blocked' : 'active' %>">
        <%= user.is_blocked ? 'Blocked' : 'Active' %>
      </span>
    </p>
    
    <p>
      <strong>Created at:</strong>
      <%= user.created_at.strftime("%B %d, %Y") %>
    </p>
  </div>
</div>