<%# app/views/admin/users/show.html.erb %>
<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h3>User Details</h3>
    </div>
    <div class="card-body">
      <p style="color: green"><%= notice %></p>
      <%= render @user %>
      <div class="actions">
        <%= form_with url: toggle_block_admin_user_path(@user), method: :patch do |f| %>
  <%= f.submit @user.is_blocked ? 'Unblock User' : 'Block User', 
      class: "button #{@user.is_blocked ? 'unblock' : 'block'}" %>
<% end %>
        <%= link_to "Edit this user", edit_admin_user_path(@user), class: "button edit" %>
        <%= link_to "Back to users", admin_users_path, class: "button back" %>
        <%= button_to "Delete this user", admin_user_path(@user),
             method: :delete,
             class: "button delete",
            data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
</div>