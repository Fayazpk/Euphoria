<%# app/views/admin/users/show.html.erb %>
<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h3>User Details</h3>
    </div>
    <div class="card-body">
      <p style="color: green"><%= notice %></p>
      <%= render @admin_user %>
      <div class="actions">
        <%= button_to @admin_user.is_blocked ? 'Unblock User' : 'Block User', 
            toggle_block_admin_user_path(@admin_user), 
            method: :patch, 
            class: "button #{@admin_user.is_blocked ? 'unblock' : 'block'}" %>
        <%= link_to "Edit this user", edit_admin_user_path(@admin_user), class: "button edit" %>
        <%= link_to "Back to users", admin_users_path, class: "button back" %>
        <%= button_to "Delete this user", admin_user_path(@admin_user), 
            method: :delete, 
            class: "button delete",
            data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
</div>
