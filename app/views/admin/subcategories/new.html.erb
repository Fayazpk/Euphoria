<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h2>Create New Subcategory</h2>
        </div>

        <div class="card-body">
          <%= form_with(model: [:admin, @admin_subcategory], local: true) do |form| %>
            <% if @admin_subcategory.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@admin_subcategory.errors.count, "error") %> prohibited this subcategory from being saved:</h4>
                <ul>
                  <% @admin_subcategory.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_area :description, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :category_id, "Category", class: "form-label" %>
              <%= form.collection_select :category_id, Category.all, :id, :name, 
                  { prompt: "Select a category" }, 
                  { class: "form-select" } %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :image, "Subcategory Image", class: "form-label" %>
              <%= form.file_field :image, class: "form-control" %>
            </div>

            <div class="form-actions">
              <%= form.submit "Create Subcategory", class: "btn btn-primary" %>
              <%= link_to "Back to Subcategories", admin_subcategories_path, class: "btn btn-secondary ms-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
