<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <div class="d-flex justify-content-between align-items-center">
        <h3>Subcategories</h3>
        <%= link_to new_admin_subcategory_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus"></i> Add New
        <% end %>
      </div>
    </div>

    <div class="card-body">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Actions</th>
            <th>Image</th>
          </tr>
        </thead>

        <tbody>
          <% @admin_subcategories.each do |subcategory| %>
            <tr>
              <td><%= subcategory.name %></td>
              <td><%= subcategory.category&.name %></td>
              <td><%= truncate(subcategory.description, length: 50) %></td>
              <td>
                <%= link_to admin_subcategory_path(subcategory), class: "btn btn-sm btn-info" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
                <%= link_to edit_admin_subcategory_path(subcategory), class: "btn btn-sm btn-warning" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                <%= button_to admin_subcategory_path(subcategory), method: :delete, 
                    class: "btn btn-sm btn-danger", 
                    form: { style: 'display: inline-block' },
                    data: { confirm: "Are you sure?" } do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

