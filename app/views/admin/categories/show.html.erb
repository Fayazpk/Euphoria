<div class="container">
  <h1>Category Details</h1>

  <div>
    <p><strong>Name:</strong> <%= @admin_category.name %></p>
    <p><strong>Description:</strong> <%= @admin_category.description %></p>
    <p><strong>Created At:</strong> <%= @admin_category.created_at.strftime("%B %d, %Y") %></p>
  </div>

  <div>
    <%= link_to "Edit this category", edit_admin_category_path(@admin_category), class: "btn btn-primary" %>
    <%= link_to "Back to categories", admin_categories_path, class: "btn btn-secondary" %>

    <%= button_to "Destroy this category", admin_category_path(@admin_category), 
                  method: :delete, 
                  class: "btn btn-danger", 
                  data: { turbo_confirm: "Are you sure you want to delete this category?" } %>
  </div>
</div>
