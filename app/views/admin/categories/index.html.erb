<% content_for :title, "Categories" %>

<div class="container-fluid py-4">
  <!-- Header Section -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Categories</h2>
    <%= link_to new_admin_category_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus me-2"></i>Add New Category
    <% end %>
  </div>

  <!-- Categories Table -->
  <% if @admin_categories.present? %>
    <div class="card shadow-sm">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead clazss="bg-light">
              <tr>
                <th class="ps-4">Name</th>
                <th>Description</th>
                <th>Products</th>
                <th>Created At</th>
                <th >Actions</th>
                <th class="text-end pe-4">Image</th>
              </tr>
            </thead>
            <tbody>
              <% @admin_categories.each do |category| %>
                <tr>
                  <td class="ps-4">
                    <div class="d-flex align-items-center">
                      <div class="category-icon me-3">
                        <i class="fas fa-folder text-primary"></i>
                      </div>
                      <div>
                        <h6 class="mb-0"><%= category.name %></h6>
                      </div>
                    </div>
                  </td>
                  <td>
                    <p class="text-muted mb-0 text-truncate" style="max-width: 250px;">
                      <%= category.description %>
                    </p>
                  </td>
                  <td>
                    <span class="badge bg-light text-dark">
                      0 products
                    </span>
                  </td>
                  <td>
                    <%= category.created_at.strftime("%B %d, %Y") %>
                  </td>
                  <td class="text-end pe-4">
                    <div class="btn-group">
                      <%= link_to admin_category_path(category), class: "btn btn-light btn-sm" do %>
                        <i class="fas fa-eye"></i>
                      <% end %>

                      <%= link_to edit_admin_category_path(category), class: "btn btn-light btn-sm" do %>
                        <i class="fas fa-edit"></i>
                      <% end %>

                      <%= button_to admin_category_path(category), 
                          method: :delete, 
                          class: "btn btn-light btn-sm",
                          form: { data: { turbo_confirm: "Are you sure?" } } do %>
                        <i class="fas fa-trash text-danger"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-5">
      <div class="mb-4">
        <i class="fas fa-folder-open fa-4x text-muted"></i>
      </div>
      <h4>No Categories Found</h4>
      <p class="text-muted">Get started by creating your first category</p>
      <%= link_to new_admin_category_path, class: "btn btn-primary" do %>
        <i class="fas fa-plus me-2"></i>Add Category
      <% end %>
    </div>
  <% end %>
</div>
