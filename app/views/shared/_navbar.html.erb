<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .mega-menu {
            display: none;
            transition: all 0.3s ease;
        }
        .group:hover .mega-menu {
            display: block;
        }
        .search-bar {
            transition: width 0.3s ease;
        }
        .search-bar:focus {
            width: 400px;
        }
    </style>
</head>
<body>
    <!-- Top Bar -->
 

    <!-- Main Navigation -->
    <nav class="bg-white shadow-md sticky top-0 z-50">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center h-20">
                <!-- Logo -->
                <a href="/" class="flex items-center space-x-2">
                    <span class="text-2xl font-bold text-gray-800">Euphoria</span>
                </a>

                <!-- Search Bar -->
                <div class="hidden md:block flex-1 max-w-xl px-6">
                    <div class="relative">
                        <input type="search" 
                               placeholder="Search for products..." 
                               class="search-bar w-full px-4 py-2 pl-10 pr-4 rounded-full border border-gray-300 focus:outline-none focus:border-blue-500">
                        <div class="absolute left-3 top-2.5 text-gray-400">
                            <i class="fas fa-search"></i>
                        </div>
                    </div>
                </div>

                <!-- Right Navigation -->
                <div class="flex items-center space-x-6">
                    <!-- User Account -->
                    <div class="relative group">
                        <button class="flex items-center space-x-1 onclick:text-blue-600">
                            <i class="far fa-user text-xl"></i>
                            <span class="hidden md:inline"><%= current_user.email.truncate(5) %></span>
                        </button>
                        <div class="absolute right-0 w-48 py-2 bg-white rounded-md shadow-xl mega-menu">
                            <a href="#" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">Sign In</a>
                            <a href="#" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">Register</a>
                            <%= link_to "View All Addresses", usermodule_addresses_path, class: "block px-4 py-2 text-gray-800 hover:bg-gray-100" %>
                            <%= button_to "Logout", session_path, method: :delete, class: "block px-4 py-2 text-gray-800 hover:bg-gray-100" %>
                        </div>
                    </div>

                    <!-- Wishlist -->
                    <a href="#" class="flex items-center space-x-1 hover:text-blue-600">
                        <div class="relative">
                            <i class="far fa-heart text-xl"></i>
                        </div>
                    </a>

                    <!-- Cart -->
                   <%= link_to usermodule_cart_path(current_user.cart || current_user.create_cart), class: "flex items-center space-x-1 hover:text-blue-600" do %>
                        <div class="relative">
                            <i class="fas fa-shopping-cart text-xl"></i>
                            
                        </div>
                    <% end %>
                </div>
            </div>

            <!-- Categories Menu -->
            <div class="border-t">
                <div class="flex justify-between items-center h-12">
                    <div class="flex space-x-8">
                        <% Category.all.each do |category| %>
                            <div class="relative group">
                                <button class="flex items-center space-x-1 h-12 p">
                                    <span><%= category.name %></span>
                                    <i class="fas fa-chevron-down text-xs"></i>
                                </button>
                                <div class="absolute left-0 w-64 mt-0 py-2 bg-white rounded-b-md shadow-xl mega-menu">
                                    <% category.subcategories.each do |subcategory| %>
                                        <%= link_to usermodule_category_subcategory_products_path(category, subcategory), 
                                            class: "block px-4 py-2 text-gray-800 hover:bg-gray-100" do %>
                                            <%= subcategory.name %>
                                        <% end %>
                                    <% end %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <!-- Special Offers -->
                    <a href="#" class="flex items-center space-x-2 text-blue-600 hover:text-black-600">
                        <i class="fas fa-tag"></i>
                        Welcome, <%= current_user.email %>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Mobile Search (shows only on mobile) -->
    <div class="md:hidden px-4 py-3 bg-gray-50">
        <div class="relative">
            <input type="search" 
                   placeholder="Search for products..." 
                   class="w-full px-4 py-2 pl-10 pr-4 rounded-full border border-gray-300 focus:outline-none focus:border-blue-500">
            <div class="absolute left-3 top-2.5 text-gray-400">
                <i class="fas fa-search"></i>
            </div>
        </div>
    </div>
    



</body>
</html>